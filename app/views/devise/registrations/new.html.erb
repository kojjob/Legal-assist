<!-- app/views/devise/registrations/new.html.erb -->
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
    <!-- Page Header -->
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Create Your Account</h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Already have an account?
      <%= link_to "Sign in", new_user_session_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </p>

    <!-- Registration Form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="mt-4">
        <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
        <div class="mt-1">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <!-- Password Field -->
      <div class="mt-4">
        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
        <div class="mt-1">
          <%= f.password_field :password, autocomplete: "new-password", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
        <% if @minimum_password_length %>
          <p class="mt-2 text-sm text-gray-500">
            Your password must be at least <strong><%= @minimum_password_length %></strong> characters long.
          </p>
        <% end %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="mt-4">
        <label for="password_confirmation" class="block text-sm font-medium text-gray-700">Confirm Password</label>
        <div class="mt-1">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <!-- Username Field (Optional) -->
      <div class="mt-4">
        <label for="user_name" class="block text-sm font-medium text-gray-700">Username</label>
        <div class="mt-1">
          <%= f.text_field :user_name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="mt-6">
        <%= f.submit "Sign Up", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <!-- Social Sign-Up Options -->
    <div class="mt-6">
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">Or continue with</span>
        </div>
      </div>

      <div class="mt-6 grid grid-cols-3 gap-3">
        <!-- Social Buttons -->
        <div>
          <%= link_to "#", class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
            <svg class="w-5 h-5 mr-2" aria-hidden="true" fill="currentColor" viewBox="0 0 488 512">
              <!-- SVG path for Google icon -->
            </svg>
            Google
          <% end %>
        </div>
        <div>
          <%= link_to "#", class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
            <svg class="w-5 h-5 mr-2" aria-hidden="true" fill="currentColor" viewBox="0 0 448 512">
              <!-- SVG path for Facebook icon -->
            </svg>
            Facebook
          <% end %>
        </div>
        <div>
          <%= link_to "#", class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
            <svg class="w-5 h-5 mr-2" aria-hidden="true" fill="currentColor" viewBox="0 0 512 512">
              <!-- SVG path for Twitter icon -->
            </svg>
            Twitter
          <% end %>
        </div>
      </div>
    </div>

    <!-- Terms and Privacy -->
    <p class="mt-6 text-center text-sm text-gray-600">
      By signing up, you agree to our
      <%= link_to "Terms of Service", "#", class: "text-indigo-600 hover:text-indigo-500" %> and
      <%= link_to "Privacy Policy", "#", class: "text-indigo-600 hover:text-indigo-500" %>.
    </p>
  </div>
</div>
